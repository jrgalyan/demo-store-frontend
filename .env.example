# Vite environment variables for API base URLs
# For Kubernetes, these can be configured via ConfigMap and injected as real env vars at build time
# or served via reverse proxy so that these default to relative paths.
VITE_USER_API_BASE=http://localhost:8081
VITE_PRODUCT_API_BASE=http://localhost:8082
# Enable built-in mock Product API (set to false to use real backend)
VITE_USE_MOCK_PRODUCT=true
